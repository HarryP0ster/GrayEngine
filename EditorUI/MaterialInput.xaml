<UserControl x:Class="EditorUI.MaterialInput"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EditorUI"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <DockPanel>
        <TextBlock Name="NameTextBlock" Text="MaterialName" Foreground="White" VerticalAlignment="Center"/>
        <Button Name="LoadBtn" Content="Load" DockPanel.Dock="Right" HorizontalAlignment="Right" Width="73" Click="LoadBtn_Click"/>
    </DockPanel>
</UserControl>
